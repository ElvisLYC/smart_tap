
<h2>Registration Form</h2>

      <div>
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email', class: "form-control" %>
      </div>

      <div>
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div>
        <%= form.label :first_name %>
        <%= form.text_field :first_name, type: 'first_name', class: "form-control" %>
      </div>

        <div>
          <%= form.label :last_name %>
          <%= form.text_field :last_name, type: 'last_name', class: "form-control" %>
        </div>

        <div>
          <%= form.label :gender %>
          <%= form.text_field :gender, type: 'gender', class: "form-control" %>
        </div>

        <div>
          <%= form.label :birthdate %>
          <%= form.text_field :birthdate, type: 'birthdate', class: "form-control" %>
        </div>

        <div>
          <%= form.label :phone_number %>
          <%= form.text_field :phone_number, type: 'phone_number', class: "form-control" %>
        </div>

        <div>
          <%= form.label :address %>
          <%= form.text_field :address, type: 'address', class: "form-control" %>
        </div>

        <div>
          <%= form.label :city %>
          <%= form.text_field :city, type: 'city', class: "form-control" %>
        </div>

        <div>
          <%= form.label :zipcode %>
          <%= form.text_field :zipcode, type: 'zipcode', class: "form-control" %>
        </div>

        <div>
          <%= form.label :state %>
          <%= form.text_field :state, type: 'state', class: "form-control" %>
        </div>

        <div>
          <%= form.label :country %>
          <%= form.text_field :country, type: 'country', class: "form-control" %>
        </div>
        
        <div>
          <%= form.file_field :avatar %>
        </div>

        <%= form.submit class:"btn btn-primary login-popup-btn"%>

        <div>
          Already have an account? <%= link_to "Sign In", sign_in_path %>
        </div>
