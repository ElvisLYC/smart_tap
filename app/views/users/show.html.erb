<%= stylesheet_link_tag 'users' %>

<div class="container emp-profile">
	    <div class="row">
	        <div class="col-md-4">
	            <div class="profile-img">
								<%= image_tag(current_user.avatar.url, :alt => "avatar", id:"profile-picture") %>
	            </div>
	        </div>
	        <div class="col-md-6">
            <div class="profile-head">
                <h5>
                    <%= current_user.first_name %>
                </h5>
                <p class="proile-rating">Address : <span><%= current_user.address %></span></p>
                <p class="proile-rating">Birthday : <span><%= current_user.birthdate %></span></p>
                <p class="proile-rating">Country : <span><%= current_user.country %></span></p>
                <br><br>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
	                <li class="nav-item">
	                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Detail</a>
	                </li>
	                <li class="nav-item">
	                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Account status</a>
	                </li>
                </ul>
            </div>
	        </div>
	        <div class="col-md-2">
            <a href="/users/<%= current_user.id %>/edit" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Edit</a>
	        </div>
	    </div>
